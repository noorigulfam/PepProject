@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Doctor Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .dashboard-card {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
            transition: 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .dashboard-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 15px 35px rgba(212,175,55,0.2);
            }

            /* Golden top border */
            .dashboard-card::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: linear-gradient(90deg, #d4af37, #f8e27c);
            }

        /* Icon Circle */
        .icon-circle {
            width: 60px;
            height: 60px;
            margin: auto;
            background: linear-gradient(135deg, #d4af37, #f8e27c);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 22px;
            box-shadow: 0 5px 15px rgba(212,175,55,0.3);
        }

        .card-title {
            font-size: 15px;
            color: #777;
            margin-bottom: 5px;
        }

        .card-number {
            font-size: 32px;
            font-weight: bold;
            background: linear-gradient(90deg, #d4af37, #b8962e);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .sidebar {
            height: 100vh;
            background: #ffffff;
            border-right: 3px solid #d4af37;
            padding: 20px;
        }

        .sidebar-title {
            color: #d4af37;
            font-weight: bold;
            margin-bottom: 25px;
        }

        .sidebar a {
            display: block;
            padding: 10px 12px;
            margin-bottom: 8px;
            border-radius: 10px;
            text-decoration: none;
            color: #333;
            font-size: 14px;
            transition: 0.3s;
        }

            .sidebar a:hover {
                background-color: #d4af37;
                color: white;
            }

        .topbar {
            background: white;
            padding: 15px 25px;
            border-bottom: 2px solid #d4af37;
        }

        .gold-text {
            color: #d4af37;
            font-weight: 600;
        }

        .card-box {
            background: white;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
            transition: 0.3s;
        }

            .card-box:hover {
                transform: translateY(-4px);
            }

        .section-heading {
            color: #d4af37;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .btn-gold {
            background-color: #d4af37;
            color: white;
            border-radius: 8px;
        }

            .btn-gold:hover {
                background-color: #b8962e;
                color: white;
            }
    </style>
</head>

<body>

    @* @{
        var username = Context.Session.GetString("DoctorName");
    } *@

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar">

                <h5 class="sidebar-title">Doctor Panel</h5>

                <a asp-controller="HomePage" asp-action="DoctorDashboard">🏠 Dashboard</a>

                <small class="text-muted">Scheduling</small>
                <a asp-controller="ManagePatients" asp-action="AppointmentCalendar">📅 Appointment Calendar</a>
                <a asp-controller="ManagePatients" asp-action="ManageAvailability">⏰ Manage Availability</a>

                <small class="text-muted mt-3 d-block">Patient Management</small>
                <a asp-controller="ManagePatients" asp-action="MyPatient">👥 My Patients</a>

                <small class="text-muted mt-3 d-block">EMR</small>
                <a href="#">📝 Medical Notes</a>

                <small class="text-muted mt-3 d-block">Laboratory</small>
                <a href="#">🧪 Lab Tests</a>

                <small class="text-muted mt-3 d-block">Communication</small>
                <a href="#">🎥 Telemedicine</a>

                <hr />
                <a asp-controller="HomePage" asp-action="Login" class="text-danger">🚪 Logout</a>

            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 p-0">

                <!-- Topbar -->
                @* <div class="topbar d-flex justify-content-between align-items-center">
                    <h5 class="gold-text mb-0">
                        Welcome Dr. @(doctorname ?? "Doctor") 👩‍⚕️
                    </h5>
                    <span class="text-muted">White & Golden Medical System</span>
                </div> *@

                <div class="container mt-4">

                    @RenderBody()

                </div>

            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>