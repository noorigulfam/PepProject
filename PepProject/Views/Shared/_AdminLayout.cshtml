
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f9f9f9;
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            background: white;
            border-right: 2px solid #d4af37;
        }

            .sidebar h4 {
                color: #d4af37;
                font-weight: bold;
            }

            .sidebar a {
                display: block;
                padding: 12px;
                margin-bottom: 5px;
                text-decoration: none;
                color: #444;
                border-radius: 10px;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #d4af37;
                    color: white;
                }

        /* Topbar */
        .topbar {
            background: white;
            padding: 15px;
            border-bottom: 2px solid #d4af37;
        }

        .gold-text {
            color: #d4af37;
            font-weight: 600;
        }

        /* Cards */
        .dashboard-card {
            border-radius: 20px;
            border: none;
            background: white;
            box-shadow: 0 10px 25px rgba(0,0,0,0.06);
            transition: 0.3s;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
            }

        .card-number {
            color: #d4af37;
            font-size: 28px;
            font-weight: bold;
        }

        .table thead {
            background-color: #d4af37;
            color: white;
        }

        .btn-gold {
            background-color: #d4af37;
            color: white;
            border-radius: 10px;
        }

            .btn-gold:hover {
                background-color: #b8962e;
                color: white;
            }
    </style>
</head>

<body>

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-4">

                <h4 class="text-center mb-4">Admin Panel</h4>

                <a asp-controller="HomePage" asp-action="AdminDashboard">Dashboard</a>
                <a asp-controller="ManageDoctors" asp-action="DoctorsList">Manage Doctors</a>
                <a asp-controller="ManageDoctors" asp-action="PatientsList">Manage Patients</a>
                <a asp-controller="Admin" asp-action="AllAppointments">Appointments</a>
                <a href="#">Reports</a>
                <a asp-controller="HomePage" asp-action="Login">Logout</a>

            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 p-0">

                <!-- Topbar -->
                <div class="topbar d-flex justify-content-between align-items-center">
                    <h5 class="gold-text mb-0">Welcome Admin 👑</h5>
                    <span class="text-muted">Medical Management System</span>
                </div>

                <div class="container mt-4">

                    <!-- Stats Cards -->
                    <div class="row g-4">

                        <div class="col-md-4">
                            <div class="dashboard-card p-4 text-center">
                                <h6>Total Doctors</h6>
                                <div class="card-number">25</div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="dashboard-card p-4 text-center">
                                <h6>Total Patients</h6>
                                <div class="card-number">120</div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="dashboard-card p-4 text-center">
                                <h6>Total Appointments</h6>
                                <div class="card-number">56</div>
                            </div>
                        </div>

                    </div>

                    <!-- Recent Activity -->
                    <div class="dashboard-card p-4 mt-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="gold-text">Recent Appointments</h5>
                            <button class="btn btn-gold btn-sm">View All</button>
                        </div>


                        <div>
                            @RenderBody()
                        </div>

                    </div>

                </div>

            </div>

        </div>
    </div>

</body>
</html>
