@{
    ViewData["Title"] = "Services";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Our Services - RoyalCare Hospital</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #ffffff;
        }

        :root {
            --gold: #c8a646;
        }

        .navbar {
            background: #fff;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-weight: bold;
            color: var(--gold) !important;
        }

        .nav-link {
            font-weight: 500;
            color: #333 !important;
        }

            .nav-link:hover {
                color: var(--gold) !important;
            }

        .hero-section {
            background: linear-gradient(rgba(255,255,255,0.9), rgba(255,255,255,0.9)), url('https://images.unsplash.com/photo-1580281657527-47efb2d1c9d5') no-repeat center center/cover;
            padding: 100px 0;
            text-align: center;
        }

            .hero-section h1 {
                color: var(--gold);
                font-weight: 700;
            }

        .section-title {
            color: var(--gold);
            font-weight: 700;
            margin-bottom: 20px;
        }

        .service-card {
            background: #fff;
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            transition: 0.3s;
            height: 100%;
        }

            .service-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 35px rgba(200,166,70,0.2);
            }

        .service-icon {
            font-size: 45px;
            color: var(--gold);
            margin-bottom: 15px;
        }

        .gold-btn {
            background: var(--gold);
            color: white;
            border-radius: 30px;
            padding: 8px 25px;
            border: none;
        }

            .gold-btn:hover {
                background: #b9973e;
            }

        footer {
            background: #111;
            color: #ccc;
            padding: 20px;
            text-align: center;
            margin-top: 60px;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="#">RoyalCare+</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="menu">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="HomePage" asp-action="HomePage">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="HomePage" asp-action="AboutUs">About</a></li>
                    <li class="nav-item"><a class="nav-link active" asp-controller="HomePage" asp-action="Service">Services</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="HomePage" asp-action="Login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1 class="display-4">Our Premium Medical Services</h1>
            <p class="lead mt-3">Comprehensive healthcare solutions tailored to your needs</p>
        </div>
    </section>

    <!-- Services Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center section-title">What We Offer</h2>

            <div class="row g-4 mt-4">

                <div class="col-md-4">
                    <div class="service-card">
                        <i class="bi bi-calendar-check service-icon"></i>
                        <h5>Appointment Booking</h5>
                        <p>Easy and fast doctor scheduling system with real-time availability.</p>

                        <button class="gold-btn mt-2">Learn More</button>
                    </div>
                </div>

                <div class="col-md-4">
    <div class="service-card text-center p-4 shadow-sm rounded-4">

        <i class="bi bi-heart-pulse service-icon fs-1 text-danger mb-3"></i>

        <h5 class="fw-bold">Emergency Care</h5>

        <p class="text-muted">
            24/7 emergency medical support with advanced life-saving equipment.
        </p>

        <a asp-controller="HomePage"
           asp-action="EmergencyCare"
           class="gold-btn mt-2 d-inline-block text-decoration-none text-white px-4 py-2 rounded-3">
            Learn More
        </a>

    </div>
</div>
                <div class="col-md-4">
                    <div class="service-card">
                        <i class="bi bi-heart-pulse service-icon"></i>
                        <h5 >Emergency Care</h5>
                        <p>24/7 emergency medical support with advanced life-saving equipment.</p>
                        <button  class="gold-btn mt-2" >Learn More</button>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="service-card">
                        <i class="bi bi-file-earmark-medical service-icon"></i>
                        <h5>Electronic Medical Records</h5>
                        <p>Secure digital storage of patient medical history and reports.</p>
                        <button class="gold-btn mt-2">Learn More</button>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="service-card">
                        <i class="bi bi-capsule service-icon"></i>
                        <h5>Pharmacy Services</h5>
                        <p>On-site pharmacy with prescription tracking and refill options.</p>
                        <button class="gold-btn mt-2">Learn More</button>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="service-card">
                        <i class="bi bi-clipboard2-pulse service-icon"></i>
                        <h5>Laboratory Testing</h5>
                        <p>Advanced diagnostic labs with accurate and fast test results.</p>
                        <button class="gold-btn mt-2">Learn More</button>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="service-card">
                        <i class="bi bi-cash-coin service-icon"></i>
                        <h5>Online Billing</h5>
                        <p>Secure online payment system for bills and insurance claims.</p>
                        <button class="gold-btn mt-2">Learn More</button>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <footer>
        © 2026 RoyalCare Hospital | All Rights Reserved
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
