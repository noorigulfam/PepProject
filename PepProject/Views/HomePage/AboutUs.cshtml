@{
    ViewData["Title"] = "About Us";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>About Us - Royal Care Hospital</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #ffffff;
        }

        /* Gold Color */
        :root {
            --gold: #c8a646;
        }

        .navbar {
            background: #ffffff;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-weight: bold;
            color: var(--gold) !important;
        }

        .nav-link {
            color: #333 !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: var(--gold) !important;
            }

        .hero {
            background: linear-gradient(rgba(255,255,255,0.85), rgba(255,255,255,0.85)), url('https://images.unsplash.com/photo-1586773860418-d37222d8fce3') no-repeat center center/cover;
            padding: 120px 0;
            text-align: center;
        }

            .hero h1 {
                color: var(--gold);
                font-weight: 700;
            }

        .section-padding {
            padding: 80px 0;
        }

        .section-title {
            color: var(--gold);
            font-weight: 700;
            margin-bottom: 25px;
        }

        .card-custom {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            transition: 0.3s;
        }

            .card-custom:hover {
                transform: translateY(-5px);
            }

        .icon-gold {
            font-size: 40px;
            color: var(--gold);
        }

        .gold-btn {
            background: var(--gold);
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 30px;
        }

            .gold-btn:hover {
                background: #b9973e;
            }

        .stats {
            background: var(--gold);
            color: white;
            border-radius: 15px;
            padding: 40px;
        }

        footer {
            background: #111;
            color: #ccc;
            padding: 20px;
            text-align: center;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="#">RoyalCare+</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="menu">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="HomePage" asp-action="HomePage">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" href="#">About</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="HomePage" asp-action="Login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1 class="display-4">Luxury Healthcare Experience</h1>
            <p class="lead mt-3">Committed to Excellence in Medical Care</p>
            <button class="gold-btn mt-3">Book Appointment</button>
        </div>
    </section>

    <!-- About Section -->
    <section class="section-padding">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="section-title">About RoyalCare Hospital</h2>
                    <p>
                        RoyalCare Hospital provides premium healthcare services
                        with world-class infrastructure and advanced medical technology.
                        Our expert doctors and caring staff ensure personalized
                        treatment for every patient.
                    </p>
                    <p>
                        We focus on patient safety, innovation, and compassionate
                        service, making us one of the most trusted healthcare
                        providers in the region.
                    </p>
                </div>

                <div class="col-md-6">
                    <img src="https://images.unsplash.com/photo-1576765607924-3fcb3c4e2a76"
                         class="img-fluid rounded shadow"
                         alt="Hospital">
                </div>
            </div>
        </div>
    </section>

    <!-- Mission & Vision -->
    <section class="section-padding bg-light text-center">
        <div class="container">
            <h2 class="section-title">Our Commitment</h2>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card card-custom p-4">
                        <i class="bi bi-heart-pulse icon-gold"></i>
                        <h5 class="mt-3">Our Mission</h5>
                        <p>
                            Deliver outstanding healthcare services with
                            compassion, respect, and excellence.
                        </p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card card-custom p-4">
                        <i class="bi bi-star icon-gold"></i>
                        <h5 class="mt-3">Our Vision</h5>
                        <p>
                            To be a symbol of trust and innovation
                            in the healthcare industry.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Statistics -->
    <section class="section-padding">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3">
                    <div class="stats">
                        <h2>20+</h2>
                        <p>Years of Excellence</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats">
                        <h2>75+</h2>
                        <p>Specialist Doctors</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats">
                        <h2>15k+</h2>
                        <p>Happy Patients</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats">
                        <h2>24/7</h2>
                        <p>Emergency Care</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer>
        © 2026 RoyalCare Hospital | All Rights Reserved
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
