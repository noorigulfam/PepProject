@using PepProject.Models
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Medical Management System - Login</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            width: 400px;
            border-radius: 20px;
            background-color: #ffffff;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            border-top: 5px solid #d4af37; /* Golden top border */
        }

        .gold-text {
            color: #d4af37;
        }

        .form-control {
            border-radius: 10px;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: #d4af37;
            }

        .btn-gold {
            background-color: #d4af37;
            color: white;
            border-radius: 10px;
        }

            .btn-gold:hover {
                background-color: #b8962e;
                color: white;
            }

        .register-link a {
            color: #d4af37;
            font-weight: 500;
            text-decoration: none;
        }

            .register-link a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>

    <div class="card login-card p-4">
        <div class="text-center mb-4">
            <h3 class="fw-bold gold-text">Medical Management</h3>
            <p class="text-muted">Login to your account</p>
        </div>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Role</label>
                <select class="form-control" required asp-for="Type">
                    <option value="">--Select--</option>
                    <option value="Admin">Admin</option>
                    <option value="Doctor">Doctor</option>
                    <option value="Patient">Patient</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="Email" class="form-control" placeholder="Enter your email" required asp-for="Email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="Password" class="form-control" placeholder="Enter your password" required asp-for="Password" />
            </div>

            <div class="d-grid mb-3">
                <input type="submit" value="Login" class="btn btn-gold" />
            </div>

            <div class="text-center register-link">
                <small>
                    Don't have an account?
                    <a asp-controller="HomePage" asp-action="Register">Register</a>
                </small>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">© 2026 Medical Management System</small>
            </div>

        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
